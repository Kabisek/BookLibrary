<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBook"
    android:background="@drawable/sliit"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/addBookHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="View Book"
        android:textColor="@color/orange"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/updateSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addBookHeading"
        android:layout_marginEnd="6dp"/>

    <TextView
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the title"
        android:padding="12dp"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/addBookHeading"
        android:background="@drawable/orange_border"
        android:layout_marginTop="16dp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter the description"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:background="@drawable/orange_border"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/priorityEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the priority"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:background="@drawable/orange_border"
        android:layout_below="@id/contentEditText"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/deadlineEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the deadline"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:background="@drawable/orange_border"
        android:layout_below="@id/priorityEditText"
        android:layout_marginTop="12dp" />




</RelativeLayout>